<%= form_with(model: @dining, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :dining_type %>

    <%= f.select :dining_type, options_for_select(Dining.dining_types.keys), {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :dining_name %>

    <%= f.text_field :dining_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :rating %>

    <%= f.text_field :rating, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :location_id %>

    <%= f.collection_select :location_id, Location.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :trip_id, value: @trip.id %>

  <%= f.submit "Create dining", class: "btn btn-block btn-outline-secondary" %>
<% end %>
