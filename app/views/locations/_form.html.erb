<% was_validated = location.errors.any? %>

<%= form_with(model: location, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for location_type start -->
  <div class="form-group">
    <% location_type_class = "form-control" %>
    <% location_type_was_invalid = location.errors.include?(:location_type) %>

    <% if was_validated %>
      <% if location_type_was_invalid %>
        <% location_type_class << " is-invalid" %>
      <% else %>
        <% location_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :location_type %>
    <!-- Input for location_type start -->
    <%= f.number_field :location_type, class: location_type_class, placeholder: "Enter location type" %>
    <!-- Input for location_type end -->
    <% if location_type_was_invalid %>
      <% location.errors.full_messages_for(:location_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for location_type end -->
  <!-- Label and input for location_name start -->
  <div class="form-group">
    <% location_name_class = "form-control" %>
    <% location_name_was_invalid = location.errors.include?(:location_name) %>

    <% if was_validated %>
      <% if location_name_was_invalid %>
        <% location_name_class << " is-invalid" %>
      <% else %>
        <% location_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :location_name %>
    <!-- Input for location_name start -->
    <%= f.text_field :location_name, class: location_name_class, placeholder: "Enter location name" %>
    <!-- Input for location_name end -->
    <% if location_name_was_invalid %>
      <% location.errors.full_messages_for(:location_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for location_name end -->
  <!-- Label and input for trip_id start -->
  <div class="form-group">
    <% trip_class = "form-control" %>
    <% trip_was_invalid = location.errors.include?(:trip) %>

    <% if was_validated %>
      <% if trip_was_invalid %>
        <% trip_class << " is-invalid" %>
      <% else %>
        <% trip_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :trip_id %>
    <!-- Input for trip_id start -->
    <%= f.collection_select :trip_id, Trip.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for trip_id end -->
    <% if trip_was_invalid %>
      <% location.errors.full_messages_for(:trip).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for trip_id end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
