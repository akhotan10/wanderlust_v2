<div class="card mb-3">
  <h2 class="card-header h4">
    Highlight #<%= highlight.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Title</dt>
      <dd><%= highlight.title %></dd>

      <dt>Description</dt>
      <dd><%= highlight.description %></dd>

      <dt>Trip</dt>
      <dd>
        <% if @highlight.trip.present? %>
          <%= link_to highlight.trip, highlight.trip %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back highlight, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_highlight_url(highlight), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to highlight, method: :delete, data: { confirm: "Do you really want to delete this highlight?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(highlight.updated_at) %> ago
  </div>
</div>
