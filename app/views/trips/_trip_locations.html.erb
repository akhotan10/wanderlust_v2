<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Locations

    <a data-toggle="collapse" href="#trip_locations_new_form">
      Add location
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @trip.locations.each do |location| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to location, location %>

        <%= link_to location, method: :delete, data: { confirm: "Do you really want to delete this location" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="trip_locations_new_form">
        <%= render partial: "trips/trip_locations_new_form" %>
      </div>
    </div>

  </ul>
</div>
