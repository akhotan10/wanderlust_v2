<% was_validated = trip.errors.any? %>

<%= form_with(model: trip, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% title_class = "form-control" %>
    <% title_was_invalid = trip.errors.include?(:title) %>

    <% if was_validated %>
      <% if title_was_invalid %>
        <% title_class << " is-invalid" %>
      <% else %>
        <% title_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :title %>
    <%= f.text_field :title, class: title_class, placeholder: "Enter title" %>
    <% if title_was_invalid %>
      <% trip.errors.full_messages_for(:title).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% cover_photo_class = "form-control" %>
    <% cover_photo_was_invalid = trip.errors.include?(:cover_photo) %>

    <% if was_validated %>
      <% if cover_photo_was_invalid %>
        <% cover_photo_class << " is-invalid" %>
      <% else %>
        <% cover_photo_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :cover_photo %>
    <%= f.file_field :cover_photo, class: "form-control" %>
    <% if cover_photo_was_invalid %>
      <% trip.errors.full_messages_for(:cover_photo).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% start_date_class = "form-control" %>
    <% start_date_was_invalid = trip.errors.include?(:start_date) %>

    <% if was_validated %>
      <% if start_date_was_invalid %>
        <% start_date_class << " is-invalid" %>
      <% else %>
        <% start_date_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :start_date %>
    <%= f.date_select :start_date, class: start_date_class, placeholder: "Enter start date" %>
    <% if start_date_was_invalid %>
      <% trip.errors.full_messages_for(:start_date).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% end_date_class = "form-control" %>
    <% end_date_was_invalid = trip.errors.include?(:end_date) %>

    <% if was_validated %>
      <% if end_date_was_invalid %>
        <% end_date_class << " is-invalid" %>
      <% else %>
        <% end_date_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :end_date %>
    <%= f.date_select :end_date, class: end_date_class, placeholder: "Enter end date" %>
    <% if end_date_was_invalid %>
      <% trip.errors.full_messages_for(:end_date).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% photo_album_link_class = "form-control" %>
    <% photo_album_link_was_invalid = trip.errors.include?(:photo_album_link) %>

    <% if was_validated %>
      <% if photo_album_link_was_invalid %>
        <% photo_album_link_class << " is-invalid" %>
      <% else %>
        <% photo_album_link_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :photo_album_link %>
    <%= f.text_field :photo_album_link, class: photo_album_link_class, placeholder: "Enter photo album link" %>
    <% if photo_album_link_was_invalid %>
      <% trip.errors.full_messages_for(:photo_album_link).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
