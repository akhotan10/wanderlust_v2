<% was_validated = dining.errors.any? %>

<%= form_with(model: dining, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for dining_type start -->
  <div class="form-group">
    <% dining_type_class = "form-control" %>
    <% dining_type_was_invalid = dining.errors.include?(:dining_type) %>

    <% if was_validated %>
      <% if dining_type_was_invalid %>
        <% dining_type_class << " is-invalid" %>
      <% else %>
        <% dining_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dining_type %>
    <!-- Input for dining_type start -->
    <%= f.number_field :dining_type, class: dining_type_class, placeholder: "Enter dining type" %>
    <!-- Input for dining_type end -->
    <% if dining_type_was_invalid %>
      <% dining.errors.full_messages_for(:dining_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for dining_type end -->
  <!-- Label and input for dining_name start -->
  <div class="form-group">
    <% dining_name_class = "form-control" %>
    <% dining_name_was_invalid = dining.errors.include?(:dining_name) %>

    <% if was_validated %>
      <% if dining_name_was_invalid %>
        <% dining_name_class << " is-invalid" %>
      <% else %>
        <% dining_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dining_name %>
    <!-- Input for dining_name start -->
    <%= f.text_field :dining_name, class: dining_name_class, placeholder: "Enter dining name" %>
    <!-- Input for dining_name end -->
    <% if dining_name_was_invalid %>
      <% dining.errors.full_messages_for(:dining_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for dining_name end -->
  <!-- Label and input for rating start -->
  <div class="form-group">
    <% rating_class = "form-control" %>
    <% rating_was_invalid = dining.errors.include?(:rating) %>

    <% if was_validated %>
      <% if rating_was_invalid %>
        <% rating_class << " is-invalid" %>
      <% else %>
        <% rating_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :rating %>
    <!-- Input for rating start -->
    <%= f.number_field :rating, class: rating_class, placeholder: "Enter rating" %>
    <!-- Input for rating end -->
    <% if rating_was_invalid %>
      <% dining.errors.full_messages_for(:rating).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for rating end -->
  <!-- Label and input for location_id start -->
  <div class="form-group">
    <% location_class = "form-control" %>
    <% location_was_invalid = dining.errors.include?(:location) %>

    <% if was_validated %>
      <% if location_was_invalid %>
        <% location_class << " is-invalid" %>
      <% else %>
        <% location_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :location_id %>
    <!-- Input for location_id start -->
    <%= f.number_field :location_id, class: location_class, placeholder: "Enter location" %>
    <!-- Input for location_id end -->
    <% if location_was_invalid %>
      <% dining.errors.full_messages_for(:location).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for location_id end -->
  <!-- Label and input for trip_id start -->
  <div class="form-group">
    <% trip_class = "form-control" %>
    <% trip_was_invalid = dining.errors.include?(:trip) %>

    <% if was_validated %>
      <% if trip_was_invalid %>
        <% trip_class << " is-invalid" %>
      <% else %>
        <% trip_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :trip_id %>
    <!-- Input for trip_id start -->
    <%= f.number_field :trip_id, class: trip_class, placeholder: "Enter trip" %>
    <!-- Input for trip_id end -->
    <% if trip_was_invalid %>
      <% dining.errors.full_messages_for(:trip).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for trip_id end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
