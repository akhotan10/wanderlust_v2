<% was_validated = trip.errors.any? %>

<%= form_with(model: trip, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for title start -->
  <div class="form-group">
    <% title_class = "form-control" %>
    <% title_was_invalid = trip.errors.include?(:title) %>

    <% if was_validated %>
      <% if title_was_invalid %>
        <% title_class << " is-invalid" %>
      <% else %>
        <% title_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :title %>
    <!-- Input for title start -->
    <%= f.text_field :title, class: title_class, placeholder: "Enter title" %>
    <!-- Input for title end -->
    <% if title_was_invalid %>
      <% trip.errors.full_messages_for(:title).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for title end -->
  <!-- Label and input for cover_photo start -->
  <div class="form-group">
    <% cover_photo_class = "form-control" %>
    <% cover_photo_was_invalid = trip.errors.include?(:cover_photo) %>

    <% if was_validated %>
      <% if cover_photo_was_invalid %>
        <% cover_photo_class << " is-invalid" %>
      <% else %>
        <% cover_photo_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :cover_photo %>
    <!-- Input for cover_photo start -->
    <%= f.text_field :cover_photo, class: cover_photo_class, placeholder: "Enter cover photo" %>
    <!-- Input for cover_photo end -->
    <% if cover_photo_was_invalid %>
      <% trip.errors.full_messages_for(:cover_photo).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for cover_photo end -->
  <!-- Label and input for start_date start -->
