<%= form_with(model: @location, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :name %>

    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :location_type %>

    <%= f.select :location_type, options_for_select(Location.location_types.keys), {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :trip_id, value: @trip.id %>

  <%= f.submit "Create location", class: "btn btn-block btn-outline-secondary" %>
<% end %>
