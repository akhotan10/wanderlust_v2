<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Dishes

    <a data-toggle="collapse" href="#dining_experience_dishes_new_form">
      Add dish
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @dining_experience.dishes.each do |dish| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to dish, dish %>

        <%= link_to dish, method: :delete, data: { confirm: "Do you really want to delete this dish" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="dining_experience_dishes_new_form">
        <%= render partial: "dining_experiences/dining_experience_dishes_new_form" %>
      </div>
    </div>

  </ul>
</div>
