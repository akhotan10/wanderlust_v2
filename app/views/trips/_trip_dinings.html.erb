<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Dinings

    <a data-toggle="collapse" href="#trip_dinings_new_form">
      Add dining
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @trip.dinings.each do |dining| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to dining, dining %>

        <%= link_to dining, method: :delete, data: { confirm: "Do you really want to delete this dining" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="trip_dinings_new_form">
        <%= render partial: "trips/trip_dinings_new_form" %>
      </div>
    </div>

  </ul>
</div>
