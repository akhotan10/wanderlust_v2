<% was_validated = dining.errors.any? %>

<%= form_with(model: dining, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% dining_type_class = "form-control" %>
    <% dining_type_was_invalid = dining.errors.include?(:dining_type) %>

    <% if was_validated %>
      <% if dining_type_was_invalid %>
        <% dining_type_class << " is-invalid" %>
      <% else %>
        <% dining_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dining_type %>
    <%= f.select :dining_type, options_for_select(Dining.dining_types.keys), {}, class: "form-control" %>
    <% if dining_type_was_invalid %>
      <% dining.errors.full_messages_for(:dining_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% dining_name_class = "form-control" %>
    <% dining_name_was_invalid = dining.errors.include?(:dining_name) %>

    <% if was_validated %>
      <% if dining_name_was_invalid %>
        <% dining_name_class << " is-invalid" %>
      <% else %>
        <% dining_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dining_name %>
    <%= f.text_field :dining_name, class: dining_name_class, placeholder: "Enter dining name" %>
    <% if dining_name_was_invalid %>
      <% dining.errors.full_messages_for(:dining_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% rating_class = "form-control" %>
    <% rating_was_invalid = dining.errors.include?(:rating) %>

    <% if was_validated %>
      <% if rating_was_invalid %>
        <% rating_class << " is-invalid" %>
      <% else %>
        <% rating_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :rating %>
    <%= f.number_field :rating, class: rating_class, placeholder: "Enter rating" %>
    <% if rating_was_invalid %>
      <% dining.errors.full_messages_for(:rating).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% location_class = "form-control" %>
    <% location_was_invalid = dining.errors.include?(:location) %>

    <% if was_validated %>
      <% if location_was_invalid %>
        <% location_class << " is-invalid" %>
      <% else %>
        <% location_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :location_id %>
    <%= f.collection_select :location_id, Location.all, :id, :to_s, {}, class: "form-control" %>
    <% if location_was_invalid %>
      <% dining.errors.full_messages_for(:location).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% trip_class = "form-control" %>
    <% trip_was_invalid = dining.errors.include?(:trip) %>

    <% if was_validated %>
      <% if trip_was_invalid %>
        <% trip_class << " is-invalid" %>
      <% else %>
        <% trip_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :trip_id %>
    <%= f.collection_select :trip_id, Trip.all, :id, :to_s, {}, class: "form-control" %>
    <% if trip_was_invalid %>
      <% dining.errors.full_messages_for(:trip).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
